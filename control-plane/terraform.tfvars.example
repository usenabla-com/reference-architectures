# -----------------------------------------------------------------------------
# Control Plane - Example Variables
# Copy to terraform.tfvars and fill in values
# Or set these in HCP Terraform workspace variables
# -----------------------------------------------------------------------------

environment = "production"
location    = "eastus2"

# AKS Configuration
kubernetes_version = "1.30"
node_count         = 3
node_size          = "Standard_D2s_v3"

# Crossplane versions
crossplane_version                  = "1.15.0"
crossplane_azure_provider_version   = "v1.0.0"
crossplane_terraform_provider_version = "v0.14.0"

# Azure Service Principal for Crossplane (to provision customer enclaves)
# Create with: az ad sp create-for-rbac --name "nabla-crossplane" --role Contributor --scopes /subscriptions/<subscription-id>
azure_client_id       = ""  # Set in HCP Terraform as sensitive variable
azure_client_secret   = ""  # Set in HCP Terraform as sensitive variable
azure_subscription_id = ""  # Set in HCP Terraform as sensitive variable
azure_tenant_id       = ""  # Set in HCP Terraform as sensitive variable

# HCP Terraform token (for provider-terraform to run enclave deployments)
# Get from: https://app.terraform.io/app/settings/tokens
hcp_terraform_token = ""  # Set in HCP Terraform as sensitive variable

# Optional components
enable_argocd  = true
argocd_version = "5.51.0"
